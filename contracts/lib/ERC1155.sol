    using StringsUpgradeable for uint256;

    // Token name
    string public name;
    // Token symbol
    string public symbol;

    string public baseURI;
    string public uriSubPrefix;
    string public uriSubPostfix;

    // Mapping from token ID to account balances
    mapping(uint256 => mapping(address => uint256)) private _balances;

    mapping(uint256 => uint256) private _totalSupply;

    // Array with all token ids, used for enumeration
    EnumerableSetUpgradeable.UintSet private _allTokens;

    // Mapping from account to operator approvals
    mapping(address => mapping(address => bool)) private _operatorApprovals;

    // Mapping from owner to list of owned token IDs
    mapping(address => EnumerableSetUpgradeable.UintSet) private _ownedTokens;

    // Optional mapping for token URIs
    mapping(uint256 => string) private _tokenURIs;

    function __ERC1155_init(
        string memory name_,
        string memory symbol_,
        string memory baseURI_,
        string memory prefix,
        string memory postfix
    ) internal onlyInitializing {
        __ERC1155_init_unchained(name_, symbol_, baseURI_, prefix, postfix);
    }

    function __ERC1155_init_unchained(
        string memory name_,
        string memory symbol_,
        string memory baseURI_,
        string memory prefix,
        string memory postfix
    ) internal onlyInitializing {
        name = name_;
        symbol = symbol_;
        _setBaseURI(baseURI_);
        _setURISubPrePost(prefix, postfix);
    }

    /**
     * @dev See {IERC165-supportsInterface}.
     */
    function supportsInterface(bytes4 interfaceId) public view virtual override(ERC165Upgradeable, IERC165Upgradeable) returns (bool) {
        return
            interfaceId == type(IERC1155Upgradeable).interfaceId ||
            interfaceId == type(IERC1155MetadataURIUpgradeable).interfaceId ||
            super.supportsInterface(interfaceId);
    }

    /**
     * @dev See {IERC1155MetadataURI-uri}.
     */
    function uri(uint256 id) public view virtual override returns (string memory) {
        // if (!exists(id)) revert TokenNotExists();

        string memory tokenURI = _tokenURIs[id];
        string memory base = baseURI;

        // If there is no base URI, return the token URI.
        if (bytes(base).length == 0) {
            return tokenURI;
        }
        // If both are set, concatenate the baseURI and tokenURI (via abi.encodePacked).
        if (bytes(tokenURI).length > 0) {
            return string(abi.encodePacked(base, tokenURI));
        }

        string memory prefix = uriSubPrefix;
        string memory postfix = uriSubPostfix;

        return
            (bytes(prefix).length > 0 || bytes(postfix).length > 0)
                ? string(abi.encodePacked(base, prefix, id.toString(), postfix))
                : string(abi.encodePacked(base, id.toString()));
    }

    /**
     * @dev Sets `tokenURI` as the tokenURI of `id`.
     */
    function _setTokenURI(uint256 id, string memory baseURI_) internal virtual {
        _tokenURIs[id] = baseURI_;
    }

    /**
     * @dev Sets `baseURI` as the `_baseURI` for all tokens
     */
    function _setBaseURI(string memory baseURI_) internal virtual {
        baseURI = baseURI_;
    }

    function _setURISubPrePost(string memory prefix, string memory postfix) internal {
        uriSubPrefix = prefix;
        uriSubPostfix = postfix;
    }

